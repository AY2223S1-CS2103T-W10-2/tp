<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>

<StackPane styleClass="stack-pane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <SplitPane dividerPositions="0.8">
    <items>
      <TextField fx:id="commandTextField" onAction="#handleCommandEntered" promptText="Enter command here..."/>
      <Button fx:id="sendButton" id="sendButton" mnemonicParsing="false" onAction="#handleCommandEntered"
              prefHeight="30.0" prefWidth="100.0" text="Send" StackPane.alignment="CENTER_RIGHT"/>
    </items>
  </SplitPane>
</StackPane>